page {
    align-items: center;
}

.container {
    width: 454rpx;
    height: 454rpx;
    border: 20rpx solid #6C8687;
    overflow: hidden;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-content: space-between;
    border-radius: 20rpx;
}

.v1 {
    width: 150rpx;
    height: 150rpx;
    font-size: 50rpx;
    font-weight: 600;
    position: relative;
    opacity: 0.70;
}

.v1 view {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 10;
}

.v2 {
    width: 150rpx;
    height: 150rpx;
    background: #fff;
}

.v3 {
    font-size: 32rpx;
